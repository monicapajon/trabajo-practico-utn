<div class="container" style="margin-top: 50px;">
    <div class="row">
        <h2>Para agregar una novedad</h2>
        <form action="/admin/novedades/agregar" method="post">
            <div class="mb-3">
                <input type="text" class="form-control" placeholder="Titulo" name="titulo">
            </div>
            <div class="mb-3">
                <textarea type="text" class="form-control" placeholder="Subtitulo" rows="5" name="subtitulo"></textarea>
            </div>
            <div class="mb-3">
                <textarea type="text" class="form-control" placeholder="Cuerpo" rows="5" name="cuerpo"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Grabar</button>
        </form>
        {{#if error}}
        <p> {{message}} </p>
        {{/if}}
    </div>
</div>