<div class="container" style="margin-top: 50px;">
    <div class="row">

        <h2>Modificar una novedad</h2>
        <form action="/admin/novedades/modificar" method="post">
        <input type="hidden" name= "id" value="{{novedad.id}}">
            <div class="mb-3">
                <input type="text" class="form-control" placeholder="Titulo" name="titulo" value="{{novedad.titulo}}">
            </div>
            <div class="mb-3">
                <textarea type="text" class="form-control" placeholder="Subtitulo" rows="5"
                    name="subtitulo">{{novedad.subtitulo}}</textarea>
            </div>
            <div class="mb-3">
                <textarea type="text" class="form-control" placeholder="Cuerpo" rows="5"
                    name="cuerpo">{{novedad.cuerpo}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Modificar</button>
        </form>
        {{#if error}}
        <p> {{message}} </p>
        {{/if}}
    </div>
</div>